doctype html
head
  title Create User

  link(rel="stylesheet" href="css/main.css")
body
  - var recentPost = posts[0];

  .menu
    .nav-container
      .logo: img(src="img/iso_logo_new.png")
      nav
        ul
          each link in links
            li: a(href=link.path) #{link.title}

  header#main-header(
    style=`background: url('${recentPost.thumb}') center center / cover no-repeat #eee;`
  )

    .recent-post-container
      h2 #{recentPost.title}

  section
    h3 Top posts
    each post, index in posts
      if index !== 0
        - var url = post.thumb || "/img/placeholder.png";
        - var shorthand = post.shorthand || "That's very interesting post. Please read it!"
        article
          .post-thumb(
            style=`background: url('${url}') center center / cover no-repeat #eee;`
          )
          .post-description
            header
              h3 #{post.title}
            div !{shorthand}
            p: a(href="post/" + post.id) Read More
  footer
    div 2017 Â© It's copyright

  script(src="js/main.js")
